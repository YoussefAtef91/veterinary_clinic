    <div class="container-fluid mt-3">
        <div class="row justify-content-start">

            <div class="col-1"><input type="text" class="form-control" placeholder="Name"></div>
            <div class="col-1">
                <select class="form-select">
                    <option value="">Pet Type</option>
                    <option value="cat">cat</option>
                    <option value="dog">dog</option>
                </select>
            </div>
            <div class="col-1"><input type="text" class="form-control" placeholder="Location"></div>
            <div class="col-2"><input type="date" class="form-control"></div>
            <div class="col-1"><button class="btn btn-outline-dark">Search</button></div>
            <div class="col-5"></div>
            <div class="col-1"><a href="/post" class="btn btn-outline-dark">Add a post</a></div>


        </div>
        <hr>
    </div>
    <div class="col py-3">
        <div class="container-fluid mb-5">
            <% for (let i=0; i < missings.length; i++) { %>
                <% if (i % 3===0) { %>
                    <div class="row">
                        <% } %>
                            <div class="col-md-4 mb-3">
                                <div class="card shadow p-1" style="width: 100%;">
                                    <div class="row justify-content-start">
                                        <div class="col m-2" style="display: flex; align-items: center;">
                                            <img src="/images/person.jpg" width="35px" height="35px"
                                                style="border-radius: 50%; object-fit: cover; margin-right: 15px;">
                                            <%= missings[i].postOwner %>
                                        </div>
                                        <div class="col-4" style="margin-top: 15px;">
                                            <% const now=moment(); const createdAt=moment(missings[i].createdAt); const
                                                diffMinutes=now.diff(createdAt, 'minutes' ); const
                                                diffHours=now.diff(createdAt, 'hours' ); const
                                                diffDays=now.diff(createdAt, 'days' ); %>
                                                <% if (diffMinutes < 1) { %>
                                                    A few seconds ago
                                                    <% } else if (diffMinutes < 60) { %>
                                                        <%= diffMinutes %> minutes ago
                                                            <% } else if (diffHours < 24) { %>
                                                                <%= diffHours %> hours ago
                                                                    <% } else if (diffDays <=3) { %>
                                                                        <%= diffDays %> days ago
                                                                            <% } else { %>
                                                                                <%= createdAt.format('YYYY-MM-DD HH:mm')
                                                                                    %>
                                                                                    <% } %>
                                        </div>
                                    </div>

                                    <img src="/images/inventory_images/<%=missings[i].image%>" class="card-img-top"
                                        alt="product image" style="width: 100%; height: 400px; object-fit: cover;">
                                    <div class="card-body">
                                        <hr>
                                        Name: <%= missings[i].petName %>
                                            <br>
                                            Location: <%= missings[i].location %>
                                                <br>
                                                Date: <%= moment(missings[i].date).format('YYYY-MM-DD') %>
                                                    <br>
                                                    Pet type: <%= missings[i].petType %>
                                                        <br>
                                                        <form action="/contact" method="POST">
                                                            <input type="hidden" name="id" value="<%=missings[i]._id%>">
                                                            <button type="submit"
                                                                class="btn btn-outline-dark mt-3">Contact
                                                                Now</button>
                                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% if ((i + 1) % 3===0 || i===missings.length - 1) { %>
                    </div>
                    <% } %>
                        <% } %>
        </div>
    </div>

    <%-include('footer')%>